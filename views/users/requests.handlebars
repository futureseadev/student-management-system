<div class="container-fluid" style="width:70%;">
    {{#each requests}}
    <div class="card card-request mb-3">
        <div class="card-body">
            <div class="row">
                <div class="col-md-9">
                    <div class="media">
                        <img class="mr-3" src="/img/logos/icons/avatar.png" width="30" alt="Generic placeholder image">
                        <div class="media-body">
                            <h5 class="mt-0">{{name}}</h5>
                            <p>Joined : {{created}}</p>
                            <p>Profile : {{role}}</p>
                            <p>Is Admin : {{isAdmin}}</p>
                            <p>Email : {{email}}</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <form action="/users/requests/{{id}}?_method=PUT" method="POST" class="d-inline">
                        <input type="hidden" name="_method" value="PUT">
                        <button type="submit" class="btn btn-default" data-toggle="tooltip" title="Approve"><i class="fa fa-check fa-lg"></i></button>
                    </form>
                    <a href="#" class="btn btn-danger delete-item d-inline" data-toggle="tooltip" title="Reject"
                        data-id="/users/requests/{{id}}">
                        <i class="fa fa-trash-o fa-lg"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
    {{else}}
    <p>No pending requests.</p>
    {{/each}}
</div>

<script>
    $(function () {
        $('[data-toggle="tooltip"]').tooltip();
    });
</script>